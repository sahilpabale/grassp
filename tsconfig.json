{
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "declaration": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "ES2019",
    "noImplicitAny": false,
    "useUnknownInCatchVariables": false
  },
  "include": [
    "src/**/*"
  ]
}
